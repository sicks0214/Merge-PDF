{
  "upload": {
    "multiple": true,
    "types": ["application/pdf"],
    "maxSize": 104857600,
    "maxFiles": 20
  },
  "options": [
    {
      "name": "keepBookmarks",
      "type": "checkbox",
      "default": false,
      "label": { "en": "Keep Bookmarks", "zh": "保留书签" }
    },
    {
      "name": "optimizeForPrint",
      "type": "checkbox",
      "default": false,
      "label": { "en": "Optimize for Print", "zh": "优化打印" }
    },
    {
      "name": "usePageRange",
      "type": "checkbox",
      "default": false,
      "label": { "en": "Use Page Range", "zh": "使用页面范围" }
    }
  ],
  "submitText": {
    "en": "Merge PDF Files",
    "zh": "合并 PDF 文件"
  },
  "outputType": "file"
}
